<h1>注文履歴詳細</h1>
<div class="info">
  <table>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.family_name + @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.receiver_name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td>
        <% case @order.how_to_pay %>
          <% when 0 %>
            クレジットカード
          <% when 1 %>
            銀行振込
          <% end %>
      </td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admins_order_path do |f| %>
          <%= f.select :order_status, [["入金待ち","0"],["入金確認","1"],["製作中","2"],["発送準備中","3"],["発送済み","4"]], included_blank: "#{@order.order_status}" %>
          <%= f.submit '更新' %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
<div class="products">
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @ordered_products.each do |prod| %>
        <tr>
          <td><%= prod.product.name %></td>
          <td><%= (prod.product.price*$tax).floor %></td>
          <td><%= prod.count %></td>
          <td><%= (prod.product.price*$tax).floor*prod.count %></td>
          <td>
            <%= form_with model: prod, url: admins_ordered_product_path(prod.id) do |f| %>
              <%= f.select :production_status, [["制作不可","0"],["制作待ち","1"],["製作中","2"],["制作完了","3"]], included_blank: "#{prod.production_status}" %>
              <%= f.submit '更新' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="payment-info">
    <table>
      <tr>
        <td>商品合計</td>
        <td><%= @order.total_payment - $ship %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= $ship %></td>
      </tr>
      <tr>
        <td>請求金額合計</td>
        <td><%= @order.total_payment %></td>
      </tr>
    </table>
  </div>