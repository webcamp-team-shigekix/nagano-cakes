<div class="container">
  <div class="row mt-3">
    <h1>注文履歴一覧</h1>
    <div class="col-md-10 offset-md-1 mt-3 mb-4">
      <div class="notice text-danger">
        <% if @notice %>
          <%= @notice %>
        <% end %>
      </div>
      <div class="order-list">
        <table class="table">
          <thead>
            <tr>
              <th width="200">購入日時</th>
              <th width="200">購入者</th>
              <th width="200">注文個数</th>
              <th width="200">注文ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
                <td><%= order.customer.family_name + order.customer.first_name %></td>
                <td><%= OrderedProduct.where(order_id: order.id).count %></td>
                <td>
                  <% case order.order_status %>
                  <% when 0 %>
                    入金待ち
                  <% when 1 %>
                    入金確認
                  <% when 2 %>
                    製作中
                  <% when 3 %>
                    発送準備中
                  <% when 4 %>
                    発送済み
                  <% end %>
                </td>
                <td><%= link_to '詳細', admins_order_path(order.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="pagination justify-content-center">
        </div>
      </div>
    </div>
  </div>
</div>