<h2>商品新規登録</h2>
<%= form_with model:@product, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description, "商品説明" %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :product_type_id, "ジャンル" %>
    <%= f.collection_select :product_type_id, ProductType.all, :name, :name %>
  </div>
  <div class="form-group">
    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :is_active, "販売ステータス" %>
    <table>
      <td>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", value:true %>
      </td>
      <td>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", value:false %>
      </td>
    </table>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
