<div class="container my-5">
  <div class="row mb-3">
    <div class="col-md-2 offset-md-1">
      <h4 class="bg-light text-center">会員一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1">
      <table class="table table-hover border-bottom">
        <thead>
          <tr class="table-secondary">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td width="80"><%= customer.id %></td>
              <td width="150"><%= link_to "#{customer.family_name}#{customer.first_name}", admins_customer_path(customer.id) %></td>
              <td width="200"><%= customer.email %></td>
              <td width="150">
                <% if customer.is_deleted == false %>
                  <span class="text-success">有効</span>
                <% else %>
                  退会
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>