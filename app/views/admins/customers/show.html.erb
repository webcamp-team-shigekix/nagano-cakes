<div class="container">
    <div class="row">
        <h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h3>
        <div class="customer-info-table">
            <table>
                <tr>
                    <td>会員ID</td>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.family_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <td>会員ステータス</td>
                    <td>
                        <% if @customer.is_deleted == false %>
                            有効
                        <% else %>
                            退会
                        <% end %>
                    </td>
                </tr>
            </table>
            <%= link_to "編集する", edit_admins_customer_path(@customer.id) %>
            <%= link_to "#{@customer.family_name}さんの注文履歴", admins_orders_path(check: @customer.id) %>
        </div>
    </div>
</div>