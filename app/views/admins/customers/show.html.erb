<div class="container mt-4">
  <div class="row">
    <div class="customer-info-table">
      <table class=customer-show>
        <h3><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h3>
        <col span="1" width=150>
        <col span="1" width=150>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.family_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @customer.is_deleted == false %>
                  <span class="text-success">有効</span>
                <% else %>
                  退会
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= link_to "編集する", edit_admins_customer_path(@customer.id), class:"btn btn-success m-3" %></td>
              <td><%= link_to "#{@customer.family_name}さんの注文履歴", admins_orders_path(check: @customer.id), class:"btn btn-primary m-3" %></td>
            </tr>
          </table>
        </div>
    </div>
</div>