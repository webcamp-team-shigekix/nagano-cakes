<h2>ジャンル一覧・追加</h2>
<%= form_with model:[:admins,@product_type_new], local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

<table>
  <tr>
    <th></th>
    <th></th>
  </tr>
  <% @product_types.each do |product_type| %>
  <tr>
    <td><%= product_type.name %></td>
    <td><%= link_to '編集する', edit_admins_product_type_path(product_type.id) %></td>
  </tr>
  <% end %>
</table>