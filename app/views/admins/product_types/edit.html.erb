<div class="container my-5">
    <div class="col-lg-10 offset-lg-1">
      <h4>ジャンル編集</h4>
    </div>
  <div class="row my-3">
    <div class="offset-lg-2 col-lg-8">
      <%= form_with model:[:admins,@product_type], local:true do |f| %>
        <div class="form-group row">
          <%= f.label :name, "ジャンル名", class: "col-lg-2" %>
          <%= f.text_field :name, class: "form-control col-lg-7" %>
          <%= f.submit "変更を保存", class: 'btn btn-success offset-lg-1 col-lg-2' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
