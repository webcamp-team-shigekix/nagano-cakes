<div class="container">
    <div class="row">
        <h3>マイページ</h2>
        <div class="customer-info-table">
            <h4>登録情報</h4><%= link_to "編集する", edit_customer_registration_path %>
            <table>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.family_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
            </table>
            <h4><%= link_to '配送先一覧', receivers_path %></h4>
            <h4>注文履歴</h4>
        </div>
    </div>
</div>