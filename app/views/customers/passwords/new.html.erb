<div class="container mt-4">
  <h2>パスワードをお忘れですか?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field row mt-5">
      <div class="col-md-2"><%= f.label :email %></div>
      <div class="col-md-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="actions row">
      <div class="col-md-2"></div>
      <div class="col-md-3"><%= f.submit "パスワードを再設定", class:"btn btn-danger mt-5" %></div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-2 m-3"><%= link_to "戻る", new_customer_session_path%></div>
  </div>
</div>