<h2>カート商品</h2>
<table>
  <tr>
    <th>商品名</th>
    <th>単価</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @cart_prodcts.each do |cart_prodct| %>
  <tr> 
    <td><%= cart_prodct.name %></td>
    <td><%= cart_prodct.price %></td>
    <td><%= cart_prodct.count %></td>
    <td></td>
    <td>
      <% if cart_prodct.customer == current_customer %>
      <%= link_to "削除", customers_cart_prodcts_path(@cart_prodct), method: :delete %>
      <% end %>
    </td>
  </tr> 
  <% end %>
</table>