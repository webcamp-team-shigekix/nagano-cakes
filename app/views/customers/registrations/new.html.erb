<div class="container mt-4">
<h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="field row mt-4">
      <div class="col-md-3">名前</div>
      <div class="col-md-3">
        <%= f.label :family_name, "性" %>
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
      </div>
      <div class="col-md-3">
        <%= f.label :first_name, "名"%>
        <%= f.text_field :first_name, autocomplete: "first_name" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-md-3">フリガナ</div>
      <div class="col-md-3">
        <%= f.label :family_name_kana, "セイ" %>
        <%= f.text_field :family_name_kana, autocomplete: "family_name_kana" %>
      </div>
      <div class="col-md-3">
        <%= f.label :first_name_kana, "メイ" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-md-3"><%= f.label :phone_number, "電話番号" %></div>
      <div class="col-md-3"><%= f.text_field :phone_number, autocomplete: "phone_number" %></div>
    </div>

    <div class="field row">
      <div class="col-md-3"><%= f.label :postal_code, "郵便番号" %></div>
      <div class="col-md-3"><%= f.text_field :postal_code, autocomplete: "postal_code" %></div>
    </div>

    <div class="field row">
      <div class="col-md-3"><%= f.label :address, "住所" %></div>
      <div class="col-md-3"><%= f.text_field :address, size: 80, autocomplete: "address" %></div>
    </div>

    <div class="field row">
      <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-md-3"><%= f.email_field :email, autocomplete: "email" %></div>
    </div>

    <div class="field row">
      <div class="col-md-3">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="field row">
      <div class="col-md-3"><%= f.label :password_confirmation, "パスワード（確認用）" %></div>
      <div class="col-md-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="actions row"><div class="col-md-3"></div>
      <div class="col-md-3">
        <%= f.submit "新規登録", class:"btn btn-success mt-3" %>
      </div>
    </div>
  <% end %>
  <div class="row mt-3">
    <div class="col-md-2"><p>すでに登録済みの方は</p></div>
  </div>
  <div class="row">
    <div class="col-md-3"><%= link_to "こちら", new_customer_password_path %> からログインしてください</div>
  </div>
</div>
