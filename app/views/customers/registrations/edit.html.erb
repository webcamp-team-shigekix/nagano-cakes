      </div>

      <div class="row">
        <div class="col-md-2"><%= f.label :住所%></div>
        <div class="col-md-2"><%= f.text_field :address, size: 44, autofocus: true, autocomplete: "address" %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><%= f.label :電話番号%></div>
        <div class="col-md-2"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-2"><%= f.label :メールアドレス %></div>
        <div class="col-md-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        <div class="col-md-2"></div>
