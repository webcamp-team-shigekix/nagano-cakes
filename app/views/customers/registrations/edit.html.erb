      <div class="row mt-4">
        <div class="col-md-2"><%= f.label :氏名 %></div>
        <div class="col-md-2"><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></div>
        <div class="col-md-2"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><%= f.label :フリガナ %></div>
