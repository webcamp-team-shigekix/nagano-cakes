<div class="container my-5">
  <div class="row my-4">
    <div class="col-md-2">
      <h4 class="bg-light text-center">会員情報編集</h4>
    </div>
  </div>
    <%= form_with model: @customer, url: registration_path(resource_name), local:true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-md-4"><%= f.label :氏名 %></div>
        <div class="col-md-2"><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></div>
        <div class="col-md-2"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :フリガナ %></div>
        <div class="col-md-2"><%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %></div>
        <div class="col-md-2"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :郵便番号 %></div>
        <div class="col-md-2"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :住所%></div>
        <div class="col-md-2"><%= f.text_field :address, size: 44, autofocus: true, autocomplete: "address" %></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :電話番号%></div>
        <div class="col-md-2"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :メールアドレス %></div>
        <div class="col-md-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-4"><%= f.label :"新しいパスワード"%>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %>
        </div>
        <div class="col-md-2"><%= f.password_field :password, autocomplete: "new-password" %></div>
        <div class="col-md-6">
          （変更しない場合は何も入力しないでください）
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">確認用パスワード
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %>
        </div>
        <div class="col-md-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        <div class="col-md-6">（変更しない場合は何も入力しないでください）</div>
      </div>

      <div class="field row mt-1">
        <div class="col-md-4"><%= f.label :現在のパスワードを入力してください（必須） %></div>
        <div class="col-md-2"><%= f.password_field :current_password, autocomplete: "current-password" %></div>
      </div>

      </table>
      <div class="actions mt-4">
        <%= f.submit "編集内容を保存する", class:"btn btn-success mb-3" %>
      </div>
      <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %>
    <% end %>
</div>