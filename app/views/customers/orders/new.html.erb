<div class="container my-5">
  <h3 class="text-left">注文情報入力</h3>

  <div class="row-md-12 my-3 ml-3">
    <%= form_with url: orders_confirm_path, local: true do |f| %>
      <div class="how-to-pay">
        <h5>支払い方法</h5>
        <div class="col ml-4">
          <label><%= f.radio_button :way_to_pay, 0 ,checked: true %>クレジットカード</label><br/>
          <label><%= f.radio_button :way_to_pay, 1 %>銀行振込</label>
        </div>
      </div>
      <div class="where-to-deliver">
      　<h5>お届け先</h5>
        <label class="col ml-4">
          <%= f.radio_button :select, 0, checked: true %>
            ご自身の住所
            <div class="col d-flex justify-content-left ml-4">
              〒<%= current_customer.postal_code %>
              <%= current_customer.address %><br>
              <%= current_customer.family_name + current_customer.first_name %>
            </div>
            <%= f.hidden_field :postal_code0, value: current_customer.postal_code %>
            <%= f.hidden_field :address0, value: current_customer.address %>
            <%= f.hidden_field :receiver_name0, value: current_customer.family_name + current_customer.first_name %>
        </label><br />
        <label class="col ml-4">
          <%= f.radio_button :select, 1 %>登録済住所から選択<br>
          <span class="col ml-4"><%= f.collection_select :info1, Receiver.where(customer_id: current_customer.id), :postal_code, :receiver_info, class: "form-control col-md-8" %></span>
        </label><br />
        <label class="col ml-4">
          <%= f.radio_button :select, 2 %>新しいお届け先<br />
          <div class="col-md-12 d-flex">
            <div class="md-4 ml-4">
              郵便番号（ハイフンなし）<br>
              住所<br>
              宛名
            </div>
            <div class="md-8">
              <%= f.text_field :postal_code2 %><br>
              <%= f.text_field :address2, size: 60 %><br>
              <%= f.text_field :receiver_name2 %>
            </div>
          </div>
        </label>
      </div>
      <div class="row-md-12 d-flex justify-content-center mt-4">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
