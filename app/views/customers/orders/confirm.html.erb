<div class="container my-5">
  <h3 class="text-left">注文情報確認</h3>
  <div class="row-lg-12 my-3 ml-3 d-flex justify-content-between">
    <div class="col-lg-9">
      <table class="table-bordered">
        <tr>
          <th width=370>商品名</th>
          <th width=100>単価（税込）</th>
          <th width=100>数量</th>
          <th width=100>小計</th>
        </tr>
        <% @cart_products.each do |c_product| %>
          <% taxincluded = (c_product.product.price*$tax).floor %>
          <% sum = taxincluded*c_product.count %>
          <% @total_price += sum %>
          <tr>
            <td><%= attachment_image_tag(c_product.product, :image, fallback: "no_image.jpg", size: "50x50" ) %><%= c_product.product.name %></td>
            <td><%= taxincluded %></td>
            <td><%= c_product.count %></td>
            <td><%= sum %></td>
          </tr>
        <% end %>
        <% total_pay = @total_price + $ship %>
      </table>
    <div class="col-lg-3">
      <table class="table-bordered">
        <tr>
          <td width=100>送料</td>
          <td width=100><%= $ship %></td>
        </tr>
        <tr>
          <td width=100>商品合計</td>
          <td width=100><%= @total_price %></td>
        </tr>
        <tr>
          <td width=100>請求金額</td>
          <td width=100><%= total_pay %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row-lg-12">
    <div class="col my-3">
      支払方法<%= @way_to_pay %>
    </div>
    <div class="col my-3">
      お届け先：<%= @p_code %><%= @address %><br><%= @name %>
    </div>
  </div>

  <div class="row-lg-12 d-flex justify-content-center ">
    <%= form_with model: @order, local: true do |f| %>
      <%= f.hidden_field :how_to_pay, value: params[:way_to_pay] %>
      <%= f.hidden_field :postal_code, value: @p_code %>
      <%= f.hidden_field :address, value: @address %>
      <%= f.hidden_field :receiver_name, value: @name %>
      <%= f.hidden_field :total_payment, value: total_pay %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
