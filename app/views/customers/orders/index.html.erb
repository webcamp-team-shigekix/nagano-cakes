<h1>注文履歴一覧</h1>
<div class="order-list">
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>表示する</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.receiver_name %></td>
          <td>
            <% OrderedProduct.where(order_id: order.id).each do |prod| %>
              <%= prod.product.name %><br />
            <% end %>
          </td>
          <td><%= order.total_payment %>円</td>
          <td>
            <% case order.order_status %>
            <% when 0 %>
              入金待ち
            <% when 1 %>
              入金確認
            <% when 2 %>
              製作中
            <% when 3 %>
              発送準備中
            <% when 4 %>
              発送済み
            <% end %>
          </td>
          <td><%= link_to '表示する', order_path(order.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>