<div class="container my-5">
  <div class="row mt-3">
    <div class="col-md-3">
      <h4 class="bg-light text-center">注文履歴一覧</h4>
    </div>
    <div class="col-md-12 mt-3 mb-4">
      <div class="order-list">
        <table class="table-bordered">
          <thead>
            <tr class="table-secondary">
              <th width="150">注文日</th>
              <th width="400">配送先</th>
              <th width="200">注文商品</th>
              <th width="100">支払金額</th>
              <th width="150">ステータス</th>
              <th width="150">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.receiver_name %></td>
                <td>
                  <% OrderedProduct.where(order_id: order.id).each do |prod| %>
                    <%= prod.product.name %><br />
                  <% end %>
                </td>
                <td><%= order.total_payment %>円</td>
                <td>
                  <% case order.order_status %>
                  <% when 0 %>
                    入金待ち
                  <% when 1 %>
                    入金確認
                  <% when 2 %>
                    製作中
                  <% when 3 %>
                    発送準備中
                  <% when 4 %>
                    発送済み
                  <% end %>
                </td>
                <td align="center" valign="middle"><%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>