<h2>商品一覧</h2>全<%= Product.where(is_active: true).count %>件
<% @products.each do |product| %>
  <% unless product.is_active == false %>
    <div>
      <%= link_to product_path(product) do %>
        <%= attachment_image_tag(product, :image, :fill, 300, 225, fallback: "no_image.jpg", size: '300x225') %>
      <% end %>
    </div>
    <div>
      商品名 : <%= product.name %>
    </div>
    <div>
      <p>￥<%= converting_to_jpy(product.price) %>
    </div>
  <% end %>
<% end %>
<%= paginate @products %>