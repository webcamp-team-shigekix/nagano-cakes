<h2>商品一覧</h2>
<%= @products.each do |product| %>
  <% unless product.is_active == false %>
    <div>
      <%= link_to product_path(product) do %>
        <%= attachment_image_tag(product, :image, :fill, 300, 225, fallback: "no_image.jpg", size: '300x225') %>
      <% end %>
    </div>
    <div>
      商品名 : <%= product.name %>
    </div>
    <div>
      <p>￥<%= converting_to_jpy(product.price) %>
    </div>
  <% end %>
<% end %>

ジャンル検索一覧
<% @datas.each do |data| %>
  <div>
    <%= link_to product_path(data.id) do %>
      <%= attachment_image_tag(data, :image, :fill, 300, 225, fallback: "no_image.jpg", size: '300x225') %><br>
    <% end %>
    <p>商品名 : <%= data.name %></p><br>

    <p>￥<%= converting_to_jpy(data.price) %></p>
  </div>
<% end %>