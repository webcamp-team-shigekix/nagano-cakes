<div class="container my-5">
  <div class="row">
    <h3 class="text-left">商品一覧<span class="small">(全<%= Product.where(is_active: true).count %>件)</span></h3>
  </div>
  <div class="row my-3">
    <% @products.each do |product| %>
      <div class="col-lg-3">
        <%= link_to product_path(product.id), class: "text-decoration-none" do %>
          <div class="card my-3">
            <%= attachment_image_tag(product, :image, :fill, 200, 200, fallback: "no_image.jpg") %>
            <div class="card-body text-dark">
              <div class="card-text"><%= product.name %></div>
              <div class="card-text">¥ <%= converting_to_jpy(product.price) %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @products %>
  </div>
</div>